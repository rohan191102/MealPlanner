<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    tools:context=".signup.SignUp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreateRecipe"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:layout_marginStart="288dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="floating button for creating a button"
        android:onClick="onFabAddRecipe_Clicked"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_add_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="600dp"
            android:background="@android:color/holo_orange_dark"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="My Recipes"
            app:titleMargin="0dp"
            app:titleMarginStart="100dp" />

        <ImageButton
            android:id="@+id/menu_button_home"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#FE8700"
            android:contentDescription="A tiny Android icon"
            android:minWidth="45dp"
            android:minHeight="48dp"
            android:onClick="onBtnMenu_Clicked"
            android:src="@drawable/baseline_menu_24"
            app:tint="#FFFFFF" />

        <ImageButton
            android:id="@+id/searchBtn_home"
            android:layout_width="76dp"
            android:layout_height="65dp"
            android:layout_alignEnd="@id/toolbar"
            android:background="#FE8700"
            android:contentDescription="@string/search_button_on_the_toolbar"
            android:minWidth="45dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/baseline_search_24"
            app:tint="#FFFFFF" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

